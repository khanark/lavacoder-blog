---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'About Me';

const identity = {
    firstName: 'Borislav',
    lastName: 'Godumov',
    occupation: 'Frond End Developer',
    country: 'Bulgaria',
    hobbies: ['reading', 'playing video games', 'waching movies'],
};

const skills = ['HTML', 'CSS', 'JavaScript', 'React', 'Astro'];
---

<BaseLayout pageTitle={pageTitle}>
    <h3>Here are some facts about me:</h3>

    <ul>
        <li>My name is {identity.firstName}.</li>
        <li>
            I like in {identity.country} and I works as a {identity.occupation}.
        </li>
        {
            identity.hobbies.length >= 2 && (
                <li>
                    Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
                </li>
            )
        }
    </ul>
    <p>My skills are:</p>
    <ul>{skills.map((skill) => <li>{skill}</li>)}</ul>
</BaseLayout>
