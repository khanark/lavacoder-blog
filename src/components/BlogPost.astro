---
import { Image } from "astro:assets"; // use this later to make the images more performant
import { formatDistance } from "date-fns";
const { url, image, title, description, pubDate } = Astro.props;
---

<a href={url} class="link">
  <div class="post">
    <div class="post__header">
      <!-- <Image src={image.src} alt={image.alt} /> -->
      <img src={image.url} alt={image.alt} />
    </div>
    <div class="post__content">
      <div class="content__box-left">
        <h5 class="title">
          {title}
        </h5>
        <span class="date"
          >{
            formatDistance(Date.now(), new Date(pubDate), {
              includeSeconds: true,
              addSuffix: true,
            })
          }</span
        >
      </div>
      <p class="description">{description}</p>
    </div>
  </div>
</a>

<style lang="scss">
  .link {
    text-decoration: none;
    color: inherit;
    border-radius: 8px;
    transition: background-color 0.2s ease;

    &:hover {
      background-color: #ddd;
    }
  }

  .post {
    padding: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;

    &__header {
      width: 70px;
      height: 70px;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
      }

      .post:hover {
        transform: scale(1.2);
      }
    }

    &__content {
      .title {
        display: inline-block;
        margin: 0;
      }

      .description {
        margin: 0;
        color: #888;
      }

      .date {
        display: inline-block;
        margin-left: 1rem;
        color: var(--clr-tertiary);
        font-size: 14px;
      }
    }
  }
</style>
